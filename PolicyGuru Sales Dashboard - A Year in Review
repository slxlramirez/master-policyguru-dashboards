query="
SELECT  b.NAME, a.LAST_RUN_TIME
FROM    SCH_RPT a LEFT OUTER JOIN REPORT_OBJECT b ON a.REPORT_OID=b.OID
WHERE   STATUS=2
"
shortnames=t
| table NAME LAST_RUN_TIME</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="drilldown">none</option>
