          <query>| search TERM_STATUS="ALLOWED"
| stats SUM(CALLS) as CALLS by DATEKEY
| sort DATEKEY</query>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>NVCL Terminated Calls</title>
        <search base="nvcl_calls">
          <query>| search TERM_STATUS="TERMINATED"
| stats SUM(CALLS) as CALLS by DATEKEY
| sort DATEKEY</query>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
