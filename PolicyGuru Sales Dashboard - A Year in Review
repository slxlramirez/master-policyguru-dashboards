| stats count by savedsearch_name
| fields - count
| sort savedsearch_name
| rename savedsearch_name as "IPS Alert"</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
