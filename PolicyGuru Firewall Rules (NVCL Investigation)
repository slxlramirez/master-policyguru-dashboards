          <query>| search name = "*NVCL*" AND action = "REDIRECT"
| stats count</query>
        </search>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="rangeColors">["0x555","0x53a051","0x555"]</option>
        <option name="rangeValues">[0,10]</option>
